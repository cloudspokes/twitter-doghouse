<% if current_user %>
  Welcome <%= current_user.name %>!
  <%= link_to "Sign Out", signout_path %>
  <ol>
  <% current_user.get_following_users.each do |user| %>
    <%= content_tag :li, "#{user.screen_name} #{link_to 'Unfollow', unfollow_path(screen_name: user.screen_name)}".html_safe %>
  <% end %>
  </ol>
<% else %>
  <%= link_to "Sign in with Twitter", "/auth/twitter" %>
<% end %>