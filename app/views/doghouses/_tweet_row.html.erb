<%= content_tag :div, class: 'row' do %>
  <%= content_tag :div, class: 'span5' do %>
    <%= f.input "canned_#{type}_tweet_id", collection: canned_tweets_collection(type == CannedTweet::ENTER_TYPE ? @canned_enter_tweets : @canned_exit_tweets), include_blank: false, label: label, input_html: {class: 'canned-tweet-id'} %>
    <%= f.input "#{type}_tweet", hint: '', hint_html: {class: 'tweet_hint'}, input_html: {class: 'tweet_text input-xlarge', rows: TEXT_AREA_ROWS}, as: :text, label: false %>
  <% end %>
  <%= content_tag :div, class: 'span5' do %>
    <%= content_tag :div, id: "#{type}_tweet_preview", class: 'tweet-preview' do %>
      <%= content_tag :div, class: 'tweet-preview-header' do %>
        <%= image_tag @current_user.image %>
        <%= content_tag :span, @current_user.name %>
        <%= content_tag :span, "@#{@current_user.nickname}" %>
      <% end %>
      <%= content_tag :div, nil, id: "#{type}_tweet_preview_text" %>
    <% end %>
  <% end %>
<% end %>