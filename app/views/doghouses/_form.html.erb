<%= content_tag :div, class: 'row' do %>
  <%= content_tag :div, class: 'span10' do %>
    <%= simple_form_for(@new_doghouse, html: {class: 'form-horizontal'}) do |f| %>
      <%= content_tag :fieldset do %>
        <%= content_tag :legend, 'Add a person to the DogHouse' %>
        <%= f.input :screen_name, collection: following_users_collection, allow_blank: false, label: 'Twitter Username' %>
        <%= f.input :duration_minutes, label: 'For How Long?', input_html: {min: '1'} %>
        <%= f.input :duration_minutes_multiplier, collection: duration_minutes_multiplier_collection, label: false, include_blank: false, as: :radio_buttons %>
        <%= content_tag :div, class: 'row' do %>
          <%= content_tag :div, class: 'span5' do %>
            <%= f.input :canned_enter_tweet_id, collection: canned_tweets_collection(@canned_enter_tweets), include_blank: false, label: 'Tweet to send when inserting in DogHouse', input_html: {class: 'canned-tweet-id'} %>
            <%= f.input :enter_tweet, hint: '', hint_html: {class: 'tweet_hint'}, input_html: {class: 'tweet_text input-xlarge', rows: TEXT_AREA_ROWS}, as: :text, label: false %>
          <% end %>
          <%= content_tag :div, class: 'span5' do %>
            <%= content_tag :div, id: 'enter_tweet_preview', class: 'tweet-preview' do %>
              <%= content_tag :div, class: 'tweet-preview-header' do %>
                <%= content_tag :span, @current_user.name %>
                <%= content_tag :span, "@#{@current_user.nickname}" %>
              <% end %>
              <%= content_tag :div, nil, id: 'enter_tweet_preview_text' %>
            <% end %>
          <% end %>
        <% end %>
        <%= content_tag :div, class: 'row' do %>
          <%= content_tag :div, class: 'span5' do %>
            <%= f.input :canned_exit_tweet_id, collection: canned_tweets_collection(@canned_exit_tweets), include_blank: false, label: 'Tweet to send when releasing from DogHouse', input_html: {class: 'canned-tweet-id'} %>
            <%= f.input :exit_tweet, hint: '', hint_html: {class: 'tweet_hint'}, input_html: {class: 'tweet_text input-xlarge', rows: TEXT_AREA_ROWS}, as: :text, label: false %>
          <% end %>
          <%= content_tag :div, class: 'span5' do %>
            <%= content_tag :div, id: 'exit_tweet_preview', class: 'tweet-preview' do %>
              <%= content_tag :div, class: 'tweet-preview-header' do %>
                <%= content_tag :span, @current_user.name %>
                <%= content_tag :span, "@#{@current_user.nickname}" %>
              <% end %>
              <%= content_tag :div, nil, id: 'exit_tweet_preview_text' %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <%= f.button :submit %>
    <% end %>
  <% end %>
<% end %>
