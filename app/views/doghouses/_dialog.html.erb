<%= simple_form_for(doghouse, html: {class: 'form-horizontal dialog-form'}, remote: true) do |f| %>
  <%= content_tag :div, class: 'modal-header' do %>
    <%= content_tag :a, '&times;'.html_safe, class: 'close', data: {dismiss: 'modal'} %>
    <%= content_tag :h3, 'Edit DogHouse Entry' %>
  <% end %>
  <%= content_tag :div, class: 'modal-body' do %>
    <%= content_tag :fieldset do %>
      <%= content_tag :legend, 'Expires In' %>
      <% expiry = doghouse.get_expiry %>
      <%= f.input :expires_in_days, label: 'Days', input_html: {value: expiry[:days]} %>
      <%= f.input :expires_in_hours, label: 'Hours', input_html: {value: expiry[:hours]} %>
      <%= f.input :expires_in_minutes, label: 'Minutes', input_html: {value: expiry[:minutes]} %>
    <% end %>
    <%= content_tag :fieldset do %>
      <%= content_tag :legend, 'Release Tweet' %>
      <%= f.input :exit_tweet, hint: '', hint_html: {class: 'tweet_hint', style: 'text-align:left;'}, input_html: {class: 'dialog_tweet_text input-xlarge', rows: TEXT_AREA_ROWS}, as: :text, label: 'Tweet to send when releasing from DogHouse' %>
    <% end %>
  <% end %>
  <%= content_tag :div, f.submit('Save Changes', class: 'btn btn-primary'), class: 'modal-footer' %>
<% end %>